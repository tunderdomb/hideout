<label class="label{?cls} {cls}{/cls}">
  {+input}
    <input {?role}role="{role}"{/role}
           class="checkbox"
           type="checkbox"
           name="{name}"
           {?checked}checked="{checked}"{/checked}
           {?required}required=""{/required}/>
    {?title}
      <span class="checkbox-title">{title}</span>
    {/title}
  {/input}
</label>