<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{+title}{/title}</title>

  {+styles}{/styles}

  <!-- Targeting Windows Mobile -->
  <!--[if IEMobile 7]>
  {+windowsPhoneStyles}{/windowsPhoneStyles}
  <![endif]-->

  <!-- Target Outlook 2007 and 2010 -->
  <!--[if gte mso 9]>
  {+outlookStyles}{/outlookStyles}
  <![endif]-->

</head>
<body style="background:{background};
  color:{textColor};
  font-family:{fontFamily};
  font-size:{fontSize}"
  alink="{linkColor}"
  link="{linkColor}"
  bgcolor="{background}"
  text="{textColor}"
  yahoo="fix">
<div style="width: 100%; display: inline-block" class="body">
  <table cellpadding="0" cellspacing="0" border="0" width="100%" class="body">
    <tr>
      <td align="center" width="100%">
        <table cellpadding="0" cellspacing="0" border="0" width="{width}">
          <tr>
            <td width="{width}">{+content}{/content}</td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>
</body>
</html>